<div class="banner-home", style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= image_path "sf.jpg" %>)">
  <div class="container d-flex justify-content-around">
    <h1>Book a house <br>wherever you want</h1>
    <div class="col-sm-12 col-md-8 col-lg-5 bg-white p-3 home-search-form">
      <h2>Search for a house</h2>
        <div class="content">
          <%= simple_form_for :filter, url: houses_path, method: :get do |f| %>
            <%= f.input :place, class: "form-control", required: false, label: false, placeholder: "Which city would you like to visit?" %>
            <div class="form-group string optional filter_date">
              <input class="form-control string optional datepicker flatpickr-input" type="text" name="filter[date]" id="filter_date" readonly="readonly" placeholder="Choose une date">
            </div>
            <%= submit_tag "Rechercher", class: "button-btn-blue" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="h1-suggestions"><h1>Our top choices</h1></div>
  <div class="row">
    <% @houses.each do |house| %>
      <div class="col-3 mt-2">
        <%= link_to house_path(house) do %>
          <div class="house-card-index justify-content-center">
            <%= image_tag "https://images.unsplash.com/photo-1512917774080-9991f1c4c750?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80", alt: "house-app" %>
            <div class="carousel-item">
              <%= image_tag "https://images.unsplash.com/photo-1475855581690-80accde3ae2b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80", alt: "house-app" %>
            </div>
            <div class="home-card-infos">
              <div>
                <%= house.name %>
              </div>
              <div>
                <%= house.address %>
              </div>
              <div>
                <%= house.price %>
                <%= house.rating %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


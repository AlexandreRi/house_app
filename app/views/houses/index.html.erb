<div class="index-houses d-flex">
  <div class="col-8">
    <div class="row">
      <% @houses.each do |house| %>
        <div class="col-4 mt-5">
          <%= link_to house_path(house) do %>
            <div class="house-card-index justify-content-center">
              <div class="img-house-card-index">
                <% if house.photo.attached? %>
                  <%= image_tag house.photo, width: 250, height: 200, crop: :fill  %>
                <% else %>
                  <%= image_tag 'sf.jpg', width: 250, height: 200, crop: :fill  %>
                <% end %>
              </div>
              <div class="home-card-infos">
                <div class="house-name-address">
                  <h1><%= house.name %></h1>
                  <p><%= house.address %></p>
                </div>
                <div class="house-price-rating d-flex justify-content-between">
                  <p><%= house.price %>â‚¬</p>
                  <p><%= house.rating %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-4">
    <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

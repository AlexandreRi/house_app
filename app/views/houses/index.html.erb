<div class="index-houses d-flex">
  <div class="col-8">
    <div class="row">
      <% @houses.each do |house| %>
        <div class="col-4 mt-5">
          <%= link_to house_path(house) do %>
            <div class="house-card-index justify-content-center">
              <div class="home-card-picture">
                <%= image_tag "sf.jpeg", width: 270 %>
              </div>
              <div class="home-card-infos">
                <div>
                  <%= house.name %>
                </div>
                <div>
                  <%= house.address %>
                </div>
                <div>
                  <%= house.price %>
                  <%= house.rating %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-4">

  </div>
</div>

<div class="banner-home", style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= image_path "sf.jpg" %>)">
  <div class="container d-flex justify-content-around">
    <h1>Réservez une maison <br>près de chez vous</h1>
    <div class="col-sm-12 col-md-8 col-lg-5 bg-white p-3 home-search-form">
      <h2>Cherchez une maison</h2>
        <div class="content">
          <%= simple_form_for :filter, url: houses_path, method: :get do |f| %>
            <%= f.input :place, class: "form-control", required: false, label: false, placeholder: "Dans quelle ville souhaitez-vous dormir?" %>
            <div class="form-group string optional filter_date">
              <input class="form-control string optional datepicker flatpickr-input" type="text" name="filter[date]" id="filter_date" readonly="readonly" placeholder="Choisissez une date">
            </div>
            <%= submit_tag "Rechercher", class: "button-btn-blue" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @houses.each do |house| %>
      <div class="col-3 mt-5">
        <%= link_to house_path(house) do %>
          <div class="house-card-index justify-content-center">
            <div class="home-card-picture">
              <%= image_tag "sf.jpeg", width: 270 %>
            </div>
            <div class="home-card-infos">
              <div>
                <%= house.name %>
              </div>
              <div>
                <%= house.address %>
              </div>
              <div>
                <%= house.price %>
                <%= house.rating %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Add a new house', houses_new_path %>
